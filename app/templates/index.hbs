<div class="container lighter">
  <h1>QUESTIONS</h1>
  <ul>
    {{#each model.questions as |question|}}
      <li>
        {{#link-to 'question' question.id}}{{question.content}}{{/link-to}} by {{question.author}}
        <br>
        {{popularity-question question}}Answers:{{#link-to 'question' question.id}}{{question.answers.length}}{{/link-to}}
      </li>
    <!--Number of answers  -->
    {{/each}}
  </ul>
  {{new-question saveQuestion='saveQuestion'}}
<hr>
  <h3>ALL ANSWERS</h3>
  <ul>
    {{#each model.answers as |answer|}}
      {{answer-tile answer=answer}}
    {{/each}}
  </ul>
</div>
